<!DOCTYPE html>
<html>
	<head>
	  <title>Login</title>
	  <%= stylesheet_link_tag    "application", :media => "all" %>
	  <%= javascript_include_tag "application" %>
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div id="container">
			<div>
				<%= if current_user %>
					Registrado como: <%= current_user.email%>
					<%= link_to "salir", logout_path%>
				<% else %>
					<%= link_to "Registrarse", signup_path %> or
					<%= link_to "Entrar", login_path %>	
				<% end %>
			</div>
			<%= flash.each do |name,msg|%>
				<%= content_tag :div, msg, :id => "flash_#{name}" %>	
			<% end %>		
	        <%= yield %>
		</div>
	</body>
</html>
